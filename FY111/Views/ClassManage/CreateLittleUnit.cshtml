@model FY111.Models.FY111.ClassLittleunit

@{
    ViewData["Title"] = @Localizer["Create"];
}

<h1>@ViewData["Title"]</h1>

<h4>@Localizer["ClassLittleunit"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateLittleUnit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClassUnitId" value="@(ViewData["ClassUnitId"])" />
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" value="@(ViewData["ClassUnitCode"])_" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Image</label>
                @Html.EditorFor(model => model.Image, "ImageUploader", new { @belong = "ClassLittleunit" })
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@(Localizer["Create"])" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DetailsUnit" asp-route-id="@(ViewData["ClassUnitId"])" class="btn btn-primary">@Localizer["Back to List"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
