@model FY111.Models.FY111.Occdisaster

@{
    ViewData["Title"] = @Localizer["Edit"];
}

<h1>@ViewData["Title"]</h1>

<h4>@Localizer["Occdisaster"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClassLittleunitId" class="control-label"></label>
                <select asp-for="ClassLittleunitId" class="form-control" asp-items="ViewBag.ClassLittleUnitId"></select>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Code" class="control-label"></label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <label asp-for="Content" class="control-label"></label>
                @*<input asp-for="Introduction" class="form-control" />*@
                @Html.EditorFor(model => model.Content, "Textarea")
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@(Localizer["Save"])" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">@Localizer["Back to List"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
