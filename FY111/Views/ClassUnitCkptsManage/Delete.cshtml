@model FY111.Models.FY111.ClassUnitCkpt

@{
    ViewData["Title"] = @Localizer["Delete"];
}

<h1>@ViewData["Title"]</h1>

<h3>@Localizer["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@Localizer["ClassUnitCkpt"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClassUnit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClassUnitId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CkptId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CkptId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
